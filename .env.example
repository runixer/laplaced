# Laplaced Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Token (required)
LAPLACED_TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenRouter API Key (required)
LAPLACED_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Allowed User IDs (comma separated) - REQUIRED!
# ⚠️ If empty, bot will reject ALL messages
LAPLACED_ALLOWED_USER_IDS=123456789,987654321

# Yandex Cloud SpeechKit (optional, for voice recognition)
# LAPLACED_YANDEX_ENABLED=true
# LAPLACED_YANDEX_API_KEY=your_yandex_api_key_here
# LAPLACED_YANDEX_FOLDER_ID=your_yandex_folder_id_here

# Server Configuration (optional)
# LAPLACED_SERVER_PORT=9081
# LAPLACED_SERVER_DEBUG=false
# LAPLACED_AUTH_ENABLED=true
# LAPLACED_AUTH_USERNAME=admin
# LAPLACED_AUTH_PASSWORD=your_secure_password

# Database Path (optional)
# LAPLACED_DATABASE_PATH=data/laplaced.db
